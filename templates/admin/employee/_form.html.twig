{{ form_start(form) }}

<div class="row">
    <div class="col-md-4">{{ form_row(form.surname) }}</div>
    <div class="col-md-4">{{ form_row(form.firstname) }}</div>
    <div class="col-md-4">{{ form_row(form.num_secu) }}</div>
    <div class="col-md-4">{{ form_row(form.salary) }}</div>
</div>

<div class="row">
    <div class="col-md-4">{{ form_row(form.street) }}</div>
    <div class="col-md-4">{{ form_row(form.city) }}</div>
    <div class="col-md-4">{{ form_row(form.country) }}</div>

</div>

<div class="row">
    {% if form.flying_hours is defined %}
        <div class="col-md-4">{{ form_row(form.flying_hours) }}</div>
    {% endif %}
    {% if form.license is defined %}
        <div class="col-md-4">{{ form_row(form.license) }}</div>
    {% endif %}
    {% if form.function is defined %}
        <div class="col-md-4">{{ form_row(form.function) }}</div>
    {% endif %}
</div>

{{ form_widget(form) }}
<button class="btn btn-primary">{{ button | default('Enregistrer') }}</button>
{{ form_end(form) }}

