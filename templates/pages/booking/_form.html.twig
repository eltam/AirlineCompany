{{ form_start(form) }}

<div class="row">
    <div class="col-md-4">{{ form_row(form.surname) }}</div>
    <div class="col-md-4">{{ form_row(form.firstname) }}</div>
</div>

<div class="row">
    <div class="col-md-4">{{ form_row(form.address) }}</div>
</div>


{{ form_widget(form) }}
<button style="float: right; font-size: 1.5rem" class="btn btn-primary">{{ button | default('Enregistrer') }}</button>
{{ form_end(form) }}

